<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jae.lab1.WeatherForecast"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WeatherView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:minHeight="200dp"
        android:minWidth="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current temp"
        android:id="@+id/current_temp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/WeatherView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min temp"
        android:id="@+id/min_temp"
        android:layout_below="@+id/current_temp"
        android:layout_toEndOf="@+id/WeatherView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="max temp"
        android:id="@+id/max_temp"
        android:layout_below="@+id/min_temp"
        android:layout_toEndOf="@+id/WeatherView" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/max_temp"
        android:layout_alignParentStart="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="invisible"/>

</RelativeLayout>
